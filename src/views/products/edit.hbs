<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/products/edit/{{product.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nome" value="{{product.name}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="number" name="price" class="form-control" placeholder="Preço" value="{{product.price}}">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="2" class="form-control" placeholder="Descrição">{{product.description}}</textarea>
                    <input style="margin-top: 1rem" type="file" name="productImage"/>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>